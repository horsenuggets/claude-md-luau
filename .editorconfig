root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{sh,zsh,bash}]
indent_size = 4
shell_variant = bash

[*.ps1]
indent_size = 4
end_of_line = crlf

[*.bat]
indent_size = 4
end_of_line = crlf

[*.cmd]
indent_size = 4
end_of_line = crlf

[Makefile]
indent_style = tab
